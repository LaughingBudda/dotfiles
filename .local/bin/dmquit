#!/bin/bash

menu_list="suspend\nhibernate\nlock\nshutdown\nreboot\ncancel"
sel=$(echo -e "$menu_list" | dmenu $@ -i -l 6)

case "$sel" in
    suspend)
        slock -m "$(cowsay "$(fortune)")" &  
        systemctl suspend & ;;
    hibernate) 
        slock -m "$(cowsay "$(fortune)")" &
        systemctl hibernate & ;;
    lock)     slock -m "$(cowsay "$(fortune)")" & ;;
    shutdown) systemctl poweroff & ;;
    reboot)   systemctl reboot & ;;
    cancel)   exit ;;
esac
