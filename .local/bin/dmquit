#!/bin/bash

menu_list="cancel\nlock\nhibernate\nsuspend\nshutdown\nreboot"
sel=$(echo -e "$menu_list" | dmenu $@ -i -l 6)

case "$sel" in
    cancel)   exit ;;
    lock)     slock -m "$(cowsay "$(fortune)")" & ;;
    hibernate) 
        slock -m "$(cowsay "$(fortune)")" &
        systemctl hibernate & ;;
    suspend)
        slock -m "$(cowsay "$(fortune)")" &  
        systemctl suspend & ;;
    shutdown) systemctl poweroff & ;;
    reboot)   systemctl reboot & ;;
esac
